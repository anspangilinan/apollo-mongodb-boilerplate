{
  "compilerOptions": {
    "strict": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "init/**/*",
  ],
  "exclude": [
    "node_modules",
    "__tests__",
    "src/**/*.spec.*",
    "src/**/*.test.*",
    "src/**/*.mock.*"
  ]
}
